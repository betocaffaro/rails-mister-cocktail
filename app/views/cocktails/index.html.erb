<h1>Cocktails</h1>
<div class="container d-flex justify-content-start mx-0 px-0">

  <ul class="list-group">
    <% @cocktails.each do |cocktail| %>
      <li class="list-group-item d-flex justify-content-between align-items-center"><%= link_to cocktail.name, cocktail_path(cocktail) %>
      </li>
    <% end %>
  </ul>

</div>
<p class="my-1"><%= link_to '+ add a new cocktail', new_cocktail_path %></p>
